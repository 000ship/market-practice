<div id="post-modal" class="modal">
	<a class="close" rel="modal:close">&times;</a>
	<h3 id="formPostTitle" class="text-center"></h3>
	<hr />
	<!-- This is where main content Should be placed -->
	<form class="form-horizontal" id="postForm">
		<div class="form-group">
			<label for="title" class="col-sm-2 control-label">Title</label>
			<div class="col-sm-10">
				<input
					id="post-title-input"
					type="text"
					class="form-control"
					name="title"
					placeholder="Title"
				/>
			</div>
		</div>
		<div class="form-group">
			<label for="imageUrl" class="col-sm-2 control-label">ImageUrl</label>
			<div class="col-sm-10">
				<input
					id="post-imageUrl-input"
					type="text"
					class="form-control"
					name="imageUrl"
					placeholder="ImageUrl"
				/>
			</div>
		</div>
		<div class="form-group">
			<label for="content" class="col-sm-2 control-label">Content</label>
			<div class="col-sm-10">
				<input
					id="post-content-input"
					type="text"
					class="form-control"
					name="content"
					placeholder="Content"
				/>
			</div>
		</div>

		<!-- <div class="form-group"> -->
		<div class="modal-footer">
			<!-- <div class="col-sm-offset-2 col-sm-4"> -->
			<a id="formPostBtn" class="btn btn-success btn-block btn-lg" rel="modal:close"></a>
			<!-- </div> -->
			<!-- <div class="col-sm-offset-2 col-sm-4"> -->
			<a class="btn btn-warning btn-block btn-lg" rel="modal:close">Cancel</a>
			<!-- </div> -->
		</div>
		<!-- </div> -->
	</form>
</div>
