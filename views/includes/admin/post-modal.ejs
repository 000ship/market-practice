<div id="post-modal" class="modal">
	<!-- This is where main content Should be placed -->
	<form class="form-horizontal" id="postForm">
		<div class="form-group">
			<label for="title" class="col-sm-2 control-label">Title</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="title" placeholder="Title" />
			</div>
		</div>
		<div class="form-group">
			<label for="imageUrl" class="col-sm-2 control-label">ImageUrl</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="imageUrl" placeholder="ImageUrl" />
			</div>
		</div>
		<div class="form-group">
			<label for="content" class="col-sm-2 control-label">Content</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="content" placeholder="Content" />
			</div>
		</div>

		<div class="form-group">
			<div class="row">
				<div class="col-sm-offset-1 col-sm-4">
					<a id="formPostBtn" class="btn btn-success btn-block" rel="modal:close">Add Post</a>
				</div>
				<div class="col-sm-offset-1 col-sm-4">
					<a class="btn btn-warning btn-block" rel="modal:close">Cancel</a>
				</div>
			</div>
		</div>
	</form>
</div>
