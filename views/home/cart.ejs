<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<%- include('../includes/head.ejs') %>
	</head>
	<title>Products</title>
	<body>
		<!-- Navigation Bar -->
		<%- include('../includes/navbar.ejs') %>

		<!-- Top black Square, as background of navigation bar (white font-color) -->
		<div style="width: 100%; height: 100px; background-color: rgba(0, 0, 0, 1);"></div>

		<!-- Page Content -->
		<div class="container">
			<div class="row">
				<!-- Main Content -->
				<div class="col-lg-12 main-content">
					<!-- News Section -->
					<div id="container" class="container-fluid">
						<table id="cart-table" class="table table-hover">
							<thead>
								<tr>
									<th>Image</th>
									<th>Product</th>
									<th>Price</th>
									<th>Quantity</th>
									<th>Total</th>
								</tr>
							</thead>
						</table>
						<hr />
						<br />
						<div class="row">
							<div class="col-sm-4">
								<h2>Total Price:</h2>
							</div>
							<div class="col-sm-4">
								<h3 id="invoice-total"></h3>
							</div>
							<div class="col-sm-4">
								<br />
								<button id="checkout-btn" class="btn btn-block btn-success">Checkout</button>
							</div>
						</div>
						<br /><br />
					</div>
					<!-- End News Section -->
				</div>
				<!-- End Main Content -->
			</div>
		</div>
		<!-- End Page Content -->

		<!-- Footer -->
		<%- include('../includes/footer.ejs') %>

		<!-- Scripts -->
		<%- include('../includes/end.ejs') %>
		<script src="/js/cart-page-scripts.js" charset="utf-8"></script>
	</body>
</html>
