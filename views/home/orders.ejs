<!DOCTYPE html>
<html lang="en" dir="ltr">
	<head>
		<%- include('../includes/head.ejs') %>
	</head>
	<title>Orders</title>
	<body>
		<!-- Navigation Bar -->
		<%- include('../includes/navbar.ejs') %>

		<!-- Top black Square, as background of navigation bar (white font-color) -->
		<div style="width: 100%; height: 100px; background-color: rgba(0, 0, 0, 1);"></div>

		<!-- Page Content -->
		<div class="container">
			<div class="row">
				<!-- Main Content -->
				<div class="col-lg-12 main-content">
					<!-- News Section -->
					<div id="container" class="container-fluid">
						<!-- End News Section -->
						<% if(errorMessage !== ''){ %>
						<div
							class="alert <%= type === 'success' ? 'alert-success' : 'alert-danger' %>"
							role="alert"
						>
							<%= errorMessage %>
						</div>
						<% } %>
						<br />
						<table id="orders-table" class="table table-hover">
							<thead>
								<tr>
									<th>ID</th>
									<th>ResNumber</th>
									<th>Total</th>
									<th>Paid</th>
								</tr>
							</thead>
						</table>
						<br />
					</div>
				</div>
				<!-- End Main Content -->
			</div>
		</div>
		<!-- End Page Content -->

		<!-- Footer -->
		<%- include('../includes/footer.ejs') %>

		<!-- Scripts -->
		<%- include('../includes/end.ejs') %>
		<script src="/js/main-scripts.js" charset="utf-8"></script>
		<!-- <script src="/js/cart-page-scripts.js" charset="utf-8"></script> -->
		<script>
			$(function () {
				// Populating the table ..
				var table = $("#orders-table").DataTable({
					searching: false,
					ajax: {
						url: "http://localhost:3000/getOrders",
						headers: {
							Authorization: "bearer " + localStorage.getItem("token"),
						},
						dataSrc: "",
					},
					columns: [
						{
							data: "id",
						},
						{
							data: "resNumber",
						},
						{
							data: "price",
						},
						{
							data: "paid",
						},
					],
				});
			});
		</script>
	</body>
</html>
